{
  "manifest_version": 3,
  "name": "Motrix Downloader (64 Threads)",
  "version": "1.0",
  "description": "将浏览器下载任务转接至Motrix客户端处理，支持64线程高速下载模式",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "downloads",
    "<all_urls>"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/icon16.png"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "web_accessible_resources": [{
    "resources": ["browser-polyfill.js"],
    "matches": ["<all_urls>"]
  }]
}